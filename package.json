{
  "name": "10x-cards",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "update-types": "supabase gen types typescript --local > src/db/database.types.ts",
    "test": "npm run test:critical && npm run test:components",
    "test:critical": "vitest run --config vitest.critical.config.ts",
    "test:components": "vitest run --config vitest.components.config.ts",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:e2e": "playwright test",
    "test:e2e:auth": "playwright test --project=no-auth",
    "test:e2e:setup": "playwright test --project=setup",
    "test:e2e:login": "playwright test tests/e2e/auth/login.test.ts",
    "test:e2e:login-no-auth": "playwright test tests/e2e/auth/login-no-auth.test.ts",
    "test:coverage": "vitest run --coverage --reporter=html",
    "test:watch": "vitest",
    "test:ci": "npm run test:critical && npm run test:components && npm run test:integration",
    "test:ui": "vitest --ui"
  },
  "dependencies": {
    "@astrojs/react": "^4.2.4",
    "@hookform/resolvers": "^5.2.1",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-slot": "^1.2.3",
    "@supabase/supabase-js": "^2.49.4",
    "@tailwindcss/vite": "^4.1.4",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "astro": "^5.7.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.501.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.62.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.4",
    "tailwindcss-animate": "^1.0.7",
    "ts-fsrs": "^5.2.1",
    "typescript": "^5.8.3",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.4",
    "@mswjs/data": "^0.16.2",
    "@playwright/test": "^1.54.2",
    "@testing-library/jest-dom": "^6.7.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jsdom": "^21.1.7",
    "@typescript-eslint/parser": "^8.31.0",
    "@vitejs/plugin-react": "^5.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.25.1",
    "eslint-plugin-astro": "^1.3.1",
    "jsdom": "^26.1.0",
    "msw": "^2.10.5",
    "prettier": "^3.5.3",
    "prettier-plugin-astro": "^0.14.1",
    "supabase": "^2.22.4",
    "tw-animate-css": "^1.3.6",
    "vitest": "^3.2.4"
  }
}
