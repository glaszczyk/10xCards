---
export interface Props {
  title?: string;
  description?: string;
}

const {
  title = "10xCards - AI-Powered Flashcard Learning",
  description = "Create and learn with AI-generated flashcards. Boost your learning with spaced repetition and intelligent content generation.",
} = Astro.props;
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body>
    <div id="app">
      <slot />
    </div>
    
    <!-- Global CSS -->
    <style is:global>
      @import "../styles/global.css";
    </style>
  </body>
</html>
