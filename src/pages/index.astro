---
import AppLayout from "@/layouts/AppLayout.astro";
---

<AppLayout title="10xCards - AI-Powered Flashcard Learning">
  <div class="min-h-screen bg-background">
    <!-- Header -->
    <header class="border-b bg-card/50 backdrop-blur supports-[backdrop-filter]:bg-card/50">
      <div class="container flex h-16 items-center justify-between px-4">
        <!-- Logo/Brand -->
        <div class="flex items-center space-x-4">
          <a href="/" class="flex items-center space-x-2">
            <div class="h-6 w-6 rounded bg-primary flex items-center justify-center">
              <span class="text-primary-foreground text-sm font-bold">10x</span>
            </div>
            <span class="hidden sm:inline font-semibold text-lg">Cards</span>
          </a>
        </div>

        <!-- Navigation -->
        <nav class="flex items-center space-x-1">
          <a href="/generate" class="rounded-md transition-colors">
            <button class="flex items-center space-x-2 rounded-md px-3 py-2 text-sm font-medium hover:bg-accent hover:text-accent-foreground">
              <span>Generate</span>
            </button>
          </a>
          <a href="/learn" class="rounded-md transition-colors">
            <button class="flex items-center space-x-2 rounded-md px-3 py-2 text-sm font-medium hover:bg-accent hover:text-accent-foreground">
              <span>Learn</span>
            </button>
          </a>
          <a href="/manage" class="rounded-md transition-colors">
            <button class="flex items-center space-x-2 rounded-md px-3 py-2 text-sm font-medium hover:bg-accent hover:text-accent-foreground">
              <span>Manage</span>
            </button>
          </a>
        </nav>
      </div>
    </header>

    <!-- Main Content -->
    <main class="container mx-auto px-4 py-6">
      <div class="space-y-6">
        <div class="text-center space-y-4">
          <h1 class="text-4xl font-bold">Welcome to 10xCards</h1>
          <p class="text-xl text-muted-foreground max-w-2xl mx-auto">
            Create and learn with AI-generated flashcards. Boost your learning
            with spaced repetition and intelligent content generation.
          </p>
        </div>

        <div class="grid md:grid-cols-3 gap-6 max-w-4xl mx-auto">
          <div class="p-6 border rounded-lg text-center">
            <h3 class="text-lg font-semibold mb-2">Generate</h3>
            <p class="text-muted-foreground">
              Create flashcards from any text using AI
            </p>
          </div>
          <div class="p-6 border rounded-lg text-center">
            <h3 class="text-lg font-semibold mb-2">Learn</h3>
            <p class="text-muted-foreground">
              Study with spaced repetition algorithm
            </p>
          </div>
          <div class="p-6 border rounded-lg text-center">
            <h3 class="text-lg font-semibold mb-2">Manage</h3>
            <p class="text-muted-foreground">Organize and edit your flashcards</p>
          </div>
        </div>
      </div>
    </main>

    <!-- Footer -->
    <footer class="border-t bg-card/50 mt-auto">
      <div class="container mx-auto px-4 py-4">
        <div class="text-center text-sm text-muted-foreground">
          <p>&copy; 2024 10xCards. AI-powered flashcard learning platform.</p>
        </div>
      </div>
    </footer>
  </div>
</AppLayout>
